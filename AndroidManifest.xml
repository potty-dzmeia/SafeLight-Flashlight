<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="my.potty.flashlight"
      android:versionCode="2"
      android:versionName="1.1">
     
    <uses-sdk android:targetSdkVersion="8" android:minSdkVersion="7"></uses-sdk>
    <supports-screens android:largeScreens="true" android:normalScreens="true" android:resizeable="true" android:anyDensity="true" android:smallScreens="true" android:xlargeScreens="true"></supports-screens>
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:allowBackup="false">
        <activity android:label="@string/app_name" android:screenOrientation="portrait" android:name=".FlashlightActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        

    </application>



</manifest> 